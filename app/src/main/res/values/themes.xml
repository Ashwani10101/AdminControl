<resources>
    <!-- Base application theme. -->
    <style name="mainAdminControl" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!--Search bar-->
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>


        <!-- all the icon colors-->
        <item name="colorControlNormal">@color/l_white</item>


    </style>

    <!-- Sub Activity -->
    <style name="subActivityTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">#c5c5c5</item>

        <!-- the Curser color in search bar-->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- Touch ripplr color when u touch the search icon or any button-->
        <item name="colorControlHighlight">@color/l_white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>


    </style>


    <!-- Splash Screen-->
    <style name="MainActivitySplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>

    </style>



</resources>